# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# MongoDB Settings
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DATABASE=ai_agent
MONGODB_CONVERSATION_COLLECTION=conversations
MONGODB_MEMORY_COLLECTION=long_term_memory

# Pinecone Settings
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_MEMORY_INDEX=ai-agent-memory
PINECONE_KNOWLEDGE_INDEX=ai-agent-knowledge-base


# OpenAI Settings
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDINGS_BATCH_SIZE=100

# LangChain Settings
LANGCHAIN_TRACING=true
LANGCHAIN_PROJECT=ai-agent-with-memory
LANGCHAIN_API_KEY=your-langchain-api-key

# Monitoring
ENABLE_METRICS=true
